{
  "manifest_version": 3,
  "name": "nodejs-docsearch",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_icon": "logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "css": ["dist/assets/content.css"],
      "matches": [
        "https://nodejs.org/docs/*",
        "https://nodejs.org/api/*",
        "https://nodejs.cn/api/*"
      ]
    }
  ]
}
